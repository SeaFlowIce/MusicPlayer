<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#9BD14B">
    
 <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/f3_linear1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/f3_imageView1"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:src="@drawable/kg_ktv" 
                android:scaleType="fitXY"/>

            <RelativeLayout
                android:id="@+id/f3_Relative1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FCFCFC" >

                <ImageView
                    android:id="@+id/f3_imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/skin_ktv_ic_main_k_normal" />

                <RelativeLayout
                    android:id="@+id/f3_Relative2"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" 
                    android:layout_toLeftOf="@+id/f3_imageView2">

                    <ImageView
                        android:id="@+id/f3_imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/skin_ktv_ic_main_nearby_sing_normal" />

                    <TextView
                        android:id="@+id/f3_textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/f3_imageView3"
                        android:layout_below="@+id/f3_textView1"
                        android:text="888人"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/f3_textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/f3_imageView3"
                        android:layout_toRightOf="@+id/f3_imageView3"
                        android:text="附近"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </RelativeLayout>
                 <RelativeLayout
                    android:id="@+id/f3_Relative3"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" 
                    android:layout_toRightOf="@+id/f3_imageView2">

                    <ImageView
                        android:id="@+id/f3_imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/skin_ktv_ic_main_same_city_normal" />

                    <TextView
                        android:id="@+id/f3_textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/f3_imageView4"
                        android:layout_below="@+id/f3_textView3"
                        android:text="厦门"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/f3_textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/f3_imageView4"
                        android:layout_toRightOf="@+id/f3_imageView4"
                        android:text="排行"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/f3_Relative4"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true" 
                    android:layout_toLeftOf="@+id/f3_imageView2"
                    android:layout_below="@+id/f3_Relative2">

                    <ImageView
                        android:id="@+id/f3_imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/skin_ktv_ic_main_friend_normal" />


                    <TextView
                        android:id="@+id/f3_textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/f3_imageView5"
                        android:text="关注"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/f3_Relative5"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true" 
                    android:layout_toRightOf="@+id/f3_imageView2"
                    android:layout_below="@+id/f3_Relative3">

                    <ImageView
                        android:id="@+id/f3_imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/skin_ktv_ic_main_my_home_normal" />


                    <TextView
                        android:id="@+id/f3_textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/f3_imageView6"
                        android:text="我的"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </RelativeLayout>
            </RelativeLayout>
            
            <TextView
                    android:id="@+id/f3_textView7"
                     android:layout_below="@+id/f3_Relative1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:text="Large Text"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            <RelativeLayout
                android:id="@+id/f3_Relative6"
                android:layout_below="@+id/f2_textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FCFCFC" >

                <ImageView
                    android:id="@+id/f3_imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/skin_ktv_mainpage_game_icon" />

                <TextView
                    android:id="@+id/f3_textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/f3_imageView7"
                    android:gravity="center"
                    android:text="大赛"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <ImageView
                    android:id="@+id/f3_imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ei3"/>
                <TextView
                    android:id="@+id/f3_textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignBaseline="@+id/f3_textView8"
                    android:layout_alignBottom="@+id/f3_textView8"
                    android:layout_toLeftOf="@+id/f3_imageView8"
                    android:text="《我想和你唱》火热报名中！" />

            </RelativeLayout>
             <TextView
                    android:id="@+id/fc_textView6"
                    android:layout_below="@+id/Relative1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
